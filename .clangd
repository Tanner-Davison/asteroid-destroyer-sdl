CompileFlags:
  Add: 
    - "-I${workspaceFolder}/include"
    - "-I${workspaceFolder}/include/SDL2"
    - "-I/usr/local/include"
    - "-I/opt/homebrew/include"
    - "-std=c++17"
    - "-D__APPLE__"
Index:
  Background: true
Diagnostics:
  ClangTidy:
    Add: 
      - modernize-*
      - performance-*
    Remove:
      - modernize-use-trailing-return-type
      # - readability-identifier-naming
